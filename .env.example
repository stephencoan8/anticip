# Spotify API Credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# PostgreSQL Database URL (Railway will provide this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Flask Secret Key (REQUIRED - generate with: python -c 'import secrets; print(secrets.token_hex(32))')
SECRET_KEY=your_secret_key_here_minimum_32_characters_required

# Environment (development, production, testing)
FLASK_ENV=production

# Database Connection Pool Settings
DB_POOL_MIN=1
DB_POOL_MAX=20

# Redis URL (for rate limiting in production - use memory:// for development)
REDIS_URL=memory://

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/anticip.log
